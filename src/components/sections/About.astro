---
import AboutAcordeon from "../utils/AboutAccordion.astro";
---

<section class="mb-section">
  <header class="mb-8 grid gap-4 md:grid-cols-2 md:gap-8">
    <h2 class="text-title">Características Destacadas</h2>
    <p class="text-sm opacity-50 md:text-base">
      Descubre las características que hacen único a nuestro desarrollo
      inmobiliario
    </p>
  </header>
  <section class="grid gap-8 md:grid-cols-2">
    <AboutAcordeon open={1} />
    <div class="w-full aspect-square rounded-br-[10rem] overflow-hidden">
      <img
        class="w-full h-full object-cover"
        src="images/la-nora/habitacion.jpg"
        alt="some building"
      />
    </div>
  </section>
</section>
