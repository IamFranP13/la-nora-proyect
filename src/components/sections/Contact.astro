---
import CheapButton from "../utils/CheapButton.astro";
import ContactInput from "../utils/ContactInput.astro";
---

<section id="contact" class="mb-20 px-4 md:px-8 lg:px-16">
  <h2 class="text-title mb-8 text-3xl md:text-4xl">Contacto</h2>
  <form class="grid gap-6 md:grid-cols-2">
    <ContactInput
      id="name"
      label="Nombre"
      placeholder="Ingresa tu nombre"
      type="text"
    />
    <ContactInput
      id="company"
      label="Telefono"
      placeholder="628 123 456"
      type="phone"
    />
    <ContactInput
      id="email"
      label="Email"
      placeholder="Ingresa tu email"
      type="email"
    />
    <div class="md:col-span-2 flex justify-center">
      <button
        type="submit"
        class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
      >
        Enviar
      </button>
    </div>
  </form>
</section>
